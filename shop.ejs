<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shop</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </head>
  <style>
    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
    }

    .card {
      border: 1px solid #ccc;
      border-radius: 5px;
      padding: 20px;
    }

    .card__header {
      text-align: center;
    }

    .product__title {
      font-size: 18px;
      margin: 0;
    }

    .card__image img {
      margin-left: 75px;
      margin-top: 15px;
      margin-bottom: 10px;
      width: 50%;
      height: auto;
    }

    .product__price {
      color: #ff0000;
      font-size: 25px;
      margin: 10px 0;
    }

    .product__description {
      font-size: 14px;
    }

    .card__actions {
      text-align: center;
    }
    .btn {
      background: #ff0000;
      border: none;
      border-radius: 5px;
      padding: 10px 20px;
      margin-bottom: 10px;
    }
    .btn a {
      text-decoration: none;
      color: #fff;
    }

    .btn:hover {
      background-color: #d70018;
      color: #fff;
      font-weight: 600;
    }
  </style>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
      <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active text-white" href="/">Trang chủ</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link active text-white fw-bold"
                style="text-decoration: underline"
                href="/shop"
              >
                Sản phẩm
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active text-white" href="/addnew">
                Thêm sản phẩm
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <h1>Shop</h1>

    <main>
      <div class="grid">
        <% for (let product of products) { %>
        <article class="card product-item">
          <header class="card__header">
            <h1 class="product__title"><%= product.title %></h1>
          </header>
          <div class="card__image">
            <img src="images/<%= product.imageURL %>" alt="A Book" />
          </div>
          <div class="card__content">
            <h2 class="product__price" style="text-align: center">
              <%= product.price.toLocaleString() %> VNĐ
            </h2>
          </div>
          <div class="card__actions">
            <button class="btn">
              <a href="/shop/<%= product.id %>">Mua ngay</a>
            </button>
            <br />
            <button class="btn">
              <a href="/addnew">Thêm</a>
            </button>
            <button class="btn">
              <a href="">Xóa</a>
              <!-- /shop/delete/<%= product.id %> -->
            </button>
            <button class="btn">
              <a href="/shop/edit/<%= product.id %>">Sửa</a>
            </button>
          </div>
        </article>
        <% } %>
      </div>
    </main>
  </body>
</html>
